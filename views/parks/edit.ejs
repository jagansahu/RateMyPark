<%- include("../partials/header.ejs") %>

<div class="container">
    <div class="row create">
        <div class="col-md-12 text-center">
            <h1>Edit <%= park.name %></h1>
        </div>
        
        <div class="addins">
            <form action="/parks/<%= park._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= park.name %>" name="park[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= park.image %>" name="park[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= park.location %>" name="park[location]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= park.description %>" name="park[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/parks">Go Back</a>
        </div>        
    </div>
</div>

<%- include("../partials/footer.ejs") %>