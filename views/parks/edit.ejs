<%- include("../partials/header.ejs") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= park.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/parks/<%= park._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= park.name %>" name="park[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= park.image %>" name="park[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= park.description %>" name="park[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/parks">Go Back</a>
        </div>        
    </div>
</div>

<%- include("../partials/footer.ejs") %>