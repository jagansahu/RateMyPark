<%- include ("../partials/header.ejs") %>

<div class="container">
    <section class="jumbotron text-center jumborate">
        <div class="container">
          <h1 class="display-4">Welcome to RateMyPark</h1>
          <p class="lead text-muted">View or Add Parks That You Have Been To!</p>
          <hr class="my-4">
          <p>
            <a class="btn btn-primary btn-lg" href="/parks/new">Add New Park</a>
          </p>
        </div>
    </section>

    <div class="row text-center">
        <% parks.forEach((park) => { %>
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="card mb-4 shadow-sm">
                    <img src="<%= park.image %>" class="card-img-top" width="100%" height="225">
                    <div class="card-body">
                      <h5 class="card-title"><%= park.name %></h5>
                      <a href="/parks/<%= park._id %>" class= "btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

<%- include ("../partials/footer.ejs") %>