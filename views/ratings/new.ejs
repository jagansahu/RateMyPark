<%- include ("../partials/header.ejs") %>

<div class="container">
    <div class="col-md-12 center ratings">
        <h1>Give <%= park.name %> a Rating</h1>
        <div class="mt-3">
            <form action="/parks/<%= park._id %>/rating?_method=PUT" method="POST">
                <input type="range" min="1" max="5" id="rating-value" value="<%= park.rating %>" name="park[rating]">
                <div class="ml-2">
                    <span class="pr-3">1</span>
                    <span class="pr-2">2</span>
                    <span class="pr-2 ml-1">3</span>
                    <span class="pr-2 ml-1">4</span>
                    <span class="pr-2 ml-1">5</span>
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-primary">Submit!</button>
                </div>
            </form>
        </div>
        <a href="/parks/<%= park._id %>">Go Back</a>
    </div>
</div>

<%- include ("../partials/footer.ejs") %>

